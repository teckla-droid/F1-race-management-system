/* Font */
@import url('https://fonts.googleapis.com/css2?family=Titillium+Web:wght@300;400;700;900&display=swap');

/* Color palette */
:root {
    --background-color: #f1f3f5;
    --black-color: #15151e;
    --gray-color: #a8a8a8;
    --white-color: #ffffff;
    --primary-color: #e10600;
}

/* Smooth scroll */
html {
    scroll-behavior: smooth;
}
:target {
    scroll-margin-top: 6rem;
}
/* General */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Titillium Web', sans-serif;
    background-color: var(--background-color);
}

/* Scrollbar */
body::-webkit-scrollbar,
.scroll-x::-webkit-scrollbar {
    width: 7px;
    height: 7px;
}

body::-webkit-scrollbar-track,
.scroll-x::-webkit-scrollbar-track {
    border-radius: 50px;
    box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
}

body::-webkit-scrollbar-thumb,
.scroll-x::-webkit-scrollbar-thumb {
    background-color: var(--black-color);
    border: 1px solid var(--gray-color);
    border-radius: 50px;
}

/* Header */
header {
    background-color: var(--black-color);
    display: grid;
    grid-template-columns: 200px 1fr;
    position: sticky;
    top: 0;
    z-index: 99;
    padding: 12px;
}

header .logo {
    height: 50px;
}

header .btn-area {
    display: none;
}

header .btn-menu {
    color: var(--white-color);
    font-size: 25px;
    display: inline-block;
}

header .nav {
    list-style-type: none;
    flex-wrap: wrap;
    display: flex;
}

header .nav li {
    margin: 10px;
}

header .nav li a {
    text-transform: uppercase;
    text-decoration: none;
    font-weight: bold;
    padding: 10px;
    color: var(--white-color);
    font-size: 20px;
    transition: 0.3s;
}

header .nav li a:hover {
    background-color: var(--primary-color);
}
/* Carousel */

main .carousel {
    width: 100%;
}

.carousel-container {
    width: 100%;
    position: relative;
}

.carousel-item {
    display: none;
}

.carousel-item.visible {
    display: block;
}

.carousel-item img {
    width: 100%;
    height: 400px;
    object-fit: cover;
}

.previousButton, .nextButton {
    cursor: pointer;
    position: absolute;
    top: 50%;
    width: auto;
    padding: 15px;
    margin-top: -50px;
    color: var(--white-color);
    font-weight: bold;
    font-size: 25px;
    transition: .3s ease;
    user-select: none;
}

.previousButton {
    left: 0;
    border-radius: 0 3px 3px 0;
}

.nextButton {
    right: 0;
    border-radius: 3px 0 0 3px;
}

.previousButton:hover, .nextButton:hover {
    background-color: rgba(0, 0, 0, .8);
}

.indicator-container {
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
}

.indicator-container div {
    background-color: var(--black-color);
    margin: 2px;
    padding: 10px;
    border-radius: 5px;
}

.indicator {
    cursor: pointer;
    width: 15px;
    height: 15px;
    margin: 0 3px;
    background-color: var(--gray-color);
    border-radius: 50%;
    display: block;
    transition: background-color .4s ease;
}

.active, .indicator:hover {
    background-color: var(--primary-color);
}

.animation {
    animation-name: fade;
    animation-duration: 1.5s;
    -webkit-animation-name: fade;
    -webkit-animation-duration: 1.5s;
}

@keyframes fade {
    from {opacity: .4} 
    to {opacity: 1}
}

@-webkit-keyframes fade {
    from {opacity: .4} 
    to {opacity: 1}
}
/* History Section */

.history {
    margin: auto 135px 40px;
}

.history h2 {
    margin: 10px auto;
    text-align: center;
    font-size: 60px;
}

.history p {
    font-size: 18px;
    margin-top: 10px;
}

  /* Indicators */

#info {
    height: 100%;
    flex-wrap: wrap;  
    background-color: var(--black-color);
    display: flex;
    justify-content: space-around;
    align-items: center;
}
/* General configuration for info items */
.info-item {
    display: flex;
    padding: 20px;
    flex-direction: column;
    align-items: center;
}

.info-item .info-data {
    display: flex;
    justify-content: center;
    align-items: center;
    border: 10px solid var(--primary-color);
    color: var(--white-color);
    border-radius: 50%;
    height: 150px;
    width: 150px;
    font-weight: bold;
    font-size: 45px;
    margin: 10px;
}

.info-item .info-description {
    color: var(--white-color);
    font-weight: bold;
    font-size: 25px;
    text-align: center;
}

  /* Titles for Tracks, Drivers, and Teams */
    #tracks .title,
    #drivers .title,
    #teams .title {
    font-size: 50px;
    margin: 40px 0 0 75px;
    display: flex;
    align-items: center;
    gap: 10px;
}

.title .img-icon {
    height: 70px;
}
  /* Flip effect for cards */
.card-container {
    display: inline-block;
    margin: 0 15px 0 15px;
    perspective: 1000px;
}

.card-content {
    width: 100%;
    height: 100%;
    transform-style: preserve-3d;
    transition: .6s;
    position: relative;
}

.card-container.flip .card-content {
    transform: rotateY(180deg);
}

.card-front,
.card-back {
    position: absolute;
    width: 100%;
    height: 100%;
    backface-visibility: hidden;
    background-color: var(--white-color);
    border-radius: 25px;
    filter: drop-shadow(0px 5px 5px rgba(0, 0, 0, 0.3));
}

.card-back {
    transform: rotateY(180deg);
}

  /* General configuration for scrolling sections */
.scroll-x {
    overflow-x: auto;
    overflow-y: hidden;
    padding: 30px 20px;
    margin: 5px;
}

  /* General card configuration */
.content {
    position: relative;
}

.content:hover > a {
    display: flex;
}

.content > a {
    position: absolute;
    top: 0px;
    bottom: 13px;
    z-index: 5;
    display: none;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    user-select: none;
    padding: 10px;
    margin: 25px 0;
    font-size: 25px;
    font-weight: bold;
    color: var(--white-color);
    background-color: rgba(0, 0, 0, .3);
    transition: .3s;
}

.content > a:hover {
    background-color: rgba(0, 0, 0, .8);
}

.content .btn-right {
    right: 0;
    border-radius: 3px 0 0 3px;
}

.content .btn-left {
    left: 0;
    border-radius: 0 3px 3px 0;
}

#tracks, #teams {
    white-space: nowrap;
}

  /* Configuration for track cards */
#tracks .card-container {
    width: 376px;
    height: 285px;
}
#tracks .card-front-content,
#tracks .card-back-content {
    padding: 25px;
    white-space: normal;}
    
  /* Front of track cards */
#tracks .card-front-header {
    display: flex;
    align-items: center;
    justify-content: space-around;
}

#tracks .card-front-header img {
    height: 56px;
    width: 84px;
}

#tracks .card-front-header div {
    margin: 0 3px;
    display: flex;
    justify-content: center;
    align-items: center;
    background: linear-gradient(180deg, var(--gray-color) 0%, var(--black-color) 100%);
    width: 100%;
    height: 56px;
}

#tracks .card-front-header label {
    font-weight: bold;
    color: var(--white-color);
    font-size: 25px;
    text-transform: uppercase;
}
#tracks .card-front-body {
    margin-top: 20px;
}
#tracks .card-front-body span {
    font-weight: bold;
    font-size: 16px;
    display: block;
    color: var(--black-color);
}
#tracks .card-front-body span.text {
    margin-top: 5px;
}

#tracks .card-footer {
    display: flex;
    justify-content: space-around;
}

#tracks .card-footer .btn-left,
#tracks .card-footer .btn-right {
    font-size: 25px;
}

  /* Back of track cards */
#tracks .card-back-header h3 {
    text-align: center;
    font-size: 18px;
    margin: 0;
}

.primeiro-gp {
    grid-area: primeiro-gp;
}

.comp-circuito {
    grid-area: comp-circuito;
}

.num-voltas {
    grid-area: num-voltas;
}

.dist-corrida {
    grid-area: dist-corrida;
}

.volta-record {
    grid-area: volta-record;
}

  /* Team cards */
#teams .card-container {
    width: 550px;
    height: 285px;
}

  /* Footer */
footer {
    background-color: var(--ivory-color);
    color: var(--black-color);
    height: 350px;
    margin: 0;
    display: flex;
}

  /* Registration Form */

#register {
    padding: 50px;
    max-width: 50%;
    margin: 0 auto;
}

#register p {
    font-size: 20px;
    font-weight: bold;
    text-align: center;
}

.formLine {
    display: flex;
    flex-direction: column;
    padding: 10px;
}

.formLine label {
    font-size: 18px;
    font-weight: bold;
    padding-bottom: 4px;
    padding-left: 5px;
}

.formLine input {
    font-size: 15px;
    padding: 15px;
    border: 1px solid var(--black-color);
    border-radius: 5px;
    transition: .3s;
}

.formLine input:focus {
    outline: none;
    box-shadow: 0 0 6px rgba(0, 0, 0, 0.3);
}

.formLine:last-child {
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
}

.formLine #btnForm {
    cursor: pointer;
    width: 150px;
    font-size: 18px;
    font-weight: bold;
    padding: 10px;
    border: 2px solid var(--primary-color);
    border-radius: 5px;
    color: var(--white-color);
    background-color: var(--primary-color);
    transition: .3s;
}

.formLine #btnForm:hover {
    background-color: var(--white-color);
    color: var(--primary-color);
}

footer .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 50px;
}
footer .footer-content div {
    color: var(--white-color);
}


/* Table Styles */
table {
    width: 100%;
    border-collapse: collapse;
    margin: 20px 0;
    font-size: 18px;
    text-align: center;
}

th, td {
    padding: 15px;
    border: 1px solid #C0C0C0; /* Light grey */
}

th {
    background-color: #E10600; /* F1 Red */
    color: #FFFFFF;
}

td {
    background-color: #333333; /* Slightly darker for table rows */
}

tr:hover {
    background-color: #444444; /* Dark hover effect */
}
/* Weather Card */
.weather-card {
    background-color: #2C2C3A; /* Dark grey for the card */
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
    text-align: center;
    margin: 0 auto;
    width: 80%; /* Center the card */
}

/* Additional styling for better structure */
h2, h3 {
    color: #E10600; /* F1 Red */
}
/* Fan Engagement Container */
#fan-engagement {
    background-color: #2C2C3A; /* Dark grey to match sidebar and other sections */
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
    width: 90%;
    margin: 20px auto;
}

/* Text area and Post Button styling */
#post-input {
    width: 100%;
    padding: 10px;
    margin-bottom: 10px;
    border-radius: 5px;
    border: 1px solid #555555; /* Darker border */
    background-color: #1D1D1F; /* Match background */
    color: #FFFFFF;
    font-size: 1rem;
    resize: none;
}

#post-btn {
    width: 100%;
    padding: 10px;
    background-color: #E10600; /* F1 Red */
    color: #FFFFFF;
    font-weight: bold;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s;
}

#post-btn:hover {
    background-color: #C00500; /* Darker F1 Red on hover */
}

/* Individual Post Styling */
.post {
    background-color: #333333; /* Slightly darker background */
    border-radius: 8px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
    margin-bottom: 15px;
    padding: 15px;
}

.post-header {
    font-weight: bold;
    color: #E10600; /* F1 Red for headers */
    margin-bottom: 8px;
}

.post-content {
    font-size: 1rem;
    color: #FFFFFF;
    margin-bottom: 12px;
}

/* Post Actions (Like & Comment Buttons) */
.post-actions {
    display: flex;
    justify-content: space-between;
}

.like-btn, .comment-btn {
    padding: 5px 10px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-weight: bold;
    transition: background-color 0.3s;
    background-color: #555555; /* Darker grey for buttons */
    color: #FFFFFF;
}

.like-btn:hover, .comment-btn:hover {
    background-color: #777777; /* Lighter grey on hover */
}

.liked {
    background-color: #E10600; /* F1 Red for liked state */
}

/* Comment Section */
.comment-section {
    margin-top: 12px;
    padding-left: 15px;
    border-left: 2px solid #444444; /* Slightly lighter grey for comment section border */
}

.comment-input-section {
    margin-top: 8px;
}

.comment-input-section textarea {
    width: 100%;
    padding: 6px;
    border-radius: 4px;
    border: 1px solid #555555;
    background-color: #1D1D1F; /* Match with the dark theme */
    color: #FFFFFF;
    margin-bottom: 6px;
    resize: none;
}

.comment-input-section button {
    padding: 6px 10px;
    background-color: #E10600; /* F1 Red */
    color: #FFFFFF;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 0.9rem;
    transition: background-color 0.3s;
}

.comment-input-section button:hover {
    background-color: #C00500; /* Darker F1 Red on hover */
}

/* Individual Comment Styling */
.comment {
    padding: 8px;
    background-color: #2C2C3A; /* Dark grey for comments */
    border-radius: 4px;
    margin-bottom: 6px;
    font-size: 0.9rem;
    color: #FFFFFF;
}
#track-select {
    padding: 8px;
    font-size: 1rem;
    border-radius: 5px;
    border: 1px solid #C0C0C0; /* Light grey to match theme */
    background-color: #2C2C3A;
    color: #FFFFFF;
    margin-top: 10px;
    width: 100%;
    max-width: 300px;
}

#weather-info {
    margin-top: 20px;
}
#news-section, #top-drivers {
    margin-top: 20px;
    padding: 15px;
    background-color: #27272a; /* Dark background */
    border-radius: 8px;
    box-shadow: 0 4px 10px rgba(91, 87, 87, 0.5);
}

#news-section h2, #top-drivers h2 {
    color: #f9f9f9; /* F1 Red */
    font-size: 24px;
    margin-bottom: 10px;
}

#news-list, #driver-standings-list {
    list-style-type: none;
    padding: 0;
    margin: 0;
}

#news-list li, #driver-standings-list li {
    margin-bottom: 8px;
    font-size: 18px;
    color: #FFFFFF;
}

#news-list li a {
    text-decoration: none;
    color: #ffffff; /* F1 Red */
}

#news-list li a:hover {
    text-decoration: underline;
}
/* General style for the dropdown container */
.section label {
    font-size: 18px;
    color: #E10600; /* F1 Red */
    font-weight: bold;
    display: block;
    margin-bottom: 5px;
}

/* Styling the select dropdown */
#schedule-year, #standings-year {
    width: 100%;
    max-width: 300px;
    padding: 10px;
    font-size: 16px;
    color: #FFFFFF;
    background-color: #2C2C3A; /* Dark grey to match theme */
    border: 1px solid #C0C0C0; /* Light grey border */
    border-radius: 5px;
    margin-bottom: 20px;
    appearance: none; /* Remove default arrow */
    cursor: pointer;
    transition: background-color 0.3s, border-color 0.3s;
}

/* Hover and focus effects */
#schedule-year:hover, #standings-year:hover,
#schedule-year:focus, #standings-year:focus {
    background-color: #333333; /* Slightly lighter on hover */
    border-color: #E10600; /* F1 Red border on focus/hover */
    outline: none; /* Remove default focus outline */
}

/* Dropdown arrow styling (compatible for most browsers) */
#schedule-year::after, #standings-year::after {
    content: "▼";
    font-size: 12px;
    color: #E10600; /* F1 Red */
    position: absolute;
    right: 15px;
    pointer-events: none; /* Prevent click on icon */
}
.weather-icon {
    width: 50px;
    height: 50px;
    margin-right: 15px;
    filter: brightness(1.2); /* Makes colors pop on dark background */
}
/* Auth Section Styling in Fan Engagement */
.auth-form {
    background-color: #2C2C3A;
    padding: 20px;
    margin-bottom: 15px;
    border-radius: 8px;
    text-align: center;
}

.auth-form h2, .auth-form h3 {
    color: #E10600; /* F1 Red */
}

.auth-form input {
    width: 80%;
    padding: 10px;
    margin: 10px 0;
    border-radius: 5px;
    border: 1px solid #C0C0C0;
    background-color: #1D1D1F;
    color: #FFFFFF;
}

.auth-form button {
    width: 50%;
    padding: 10px;
    background-color: #E10600; /* F1 Red */
    color: #FFFFFF;
    font-weight: bold;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s;
}

.auth-form button:hover {
    background-color: #C00500; /* Darker F1 Red on hover */
}

/* Engagement Content Styling (visible after log-in) */
#engagement-content {
    padding: 15px;
    background-color: #2C2C3A;
    border-radius: 8px;
    margin-top: 20px;
}
/* Modal Background */
.modal {
    display: flex;
    align-items: center;
    justify-content: center;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.7); /* Semi-transparent background */
    z-index: 1000; /* Ensure it appears on top */
}

/* Modal Content */
.modal-content {
    background-color: #2C2C3A;
    padding: 20px;
    width: 90%;
    max-width: 400px;
    border-radius: 8px;
    position: relative;
    text-align: center;
    color: #FFFFFF;
}

/* Close Button */
.close-btn {
    position: absolute;
    top: 10px;
    right: 15px;
    font-size: 24px;
    cursor: pointer;
    color: #FFFFFF;
}

/* Form Styling */
.auth-form-section input {
    width: 80%;
    padding: 10px;
    margin: 10px 0;
    border-radius: 5px;
    border: 1px solid #C0C0C0;
    background-color: #1D1D1F;
    color: #FFFFFF;
}

.auth-form-section button {
    width: 60%;
    padding: 10px;
    background-color: #E10600; /* F1 Red */
    color: #FFFFFF;
    font-weight: bold;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s;
}

.auth-form-section button:hover {
    background-color: #C00500; /* Darker F1 Red on hover */
}
/* Log Out Button Styling */
#log-out-btn {
    display: inline-block;
    padding: 10px 20px;
    background-color: #E10600; /* F1 Red */
    color: #FFFFFF;
    font-weight: bold;
    font-size: 16px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.2s ease;
    margin-top: 10px;
}

#log-out-btn:hover {
    background-color: #C00500; /* Darker red on hover */
    transform: scale(1.05); /* Slightly enlarge on hover */
}

#log-out-btn:active {
    background-color: #A10400; /* Even darker red when clicked */
    transform: scale(0.98); /* Slightly shrink on active click */
}
